---
import Logo from './ui/Logo.astro';

const currentYear = new Date().getFullYear();
---

<footer class="bg-ergo-dark text-white py-12 border-t border-gray-800">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex flex-col md:flex-row justify-between items-center">
            <div class="mb-4 md:mb-0">
                <div class="mb-2 bg-transparent px-3 py-1 rounded-lg inline-block">
                    <Logo className="h-8 w-auto " />
                </div>
            </div>

            <div class="text-gray-400 text-sm text-center md:text-right">
                <p>&copy; {currentYear} ErgoSix</p>
            </div>
        </div>
    </div>
</footer>
