---
import { Activity, AlertCircle, BrainCircuit } from 'lucide-react';
import AnimatedWave from './AnimatedWave.astro';

const stats = [
    {
        value: "86%",
        label: "des salariés",
        description: "souffrent de troubles musculo-squelettiques au cours de leur carrière.",
        icon: Activity,
        color: "text-emerald-300",
        bg: "bg-emerald-900/20"
    },
    {
        value: "58%",
        label: "des employés",
        description: "décrivent des douleurs cervicales régulières liées au poste de travail.",
        icon: AlertCircle,
        color: "text-amber-300",
        bg: "bg-amber-900/20"
    },
    {
        value: "IA & Data",
        label: "La Réponse",
        description: "Une approche technologique pour prévenir plutôt que guérir.",
        icon: BrainCircuit,
        color: "text-lime-300",
        bg: "bg-lime-900/20"
    }
];
---

<section id="problem" class="relative py-10 bg-ergo-dark">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 mb-20">
        <div class="text-center mb-16">
            <h2 class="text-3xl font-bold text-white sm:text-4xl">Le Problème</h2>
            <p class="mt-4 text-lg text-gray-300">Pourquoi nous avons besoin de vous.</p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
            {stats.map((stat) => (
                <div class="p-8 rounded-2xl border border-gray-700 shadow-sm hover:shadow-lg transition-shadow bg-gray-900/30 backdrop-blur">
                    <div class={`w-12 h-12 rounded-xl ${stat.bg} ${stat.color} flex items-center justify-center mb-6`}>
                        <stat.icon className="w-6 h-6" />
                    </div>
                    <p class={`text-4xl font-extrabold ${stat.color} mb-2`}>{stat.value}</p>
                    <p class="font-semibold text-white mb-2">{stat.label}</p>
                    <p class="text-gray-400 leading-relaxed">{stat.description}</p>
                </div>
            ))}
        </div>
    </div>
    <AnimatedWave fillColor="#3D6D2D" position="bottom" />
</section>