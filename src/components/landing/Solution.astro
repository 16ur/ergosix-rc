---
import { ScanFace, LayoutTemplate, HeartPulse, Smartphone } from 'lucide-react';

const features = [
    {
        title: "Détection Ergonomique",
        desc: "Analyse posturale par webcam en temps réel (Privacy first). Détection des angles à risque.",
        icon: ScanFace,
        class: "md:col-span-2 md:row-span-2 bg-gradient-to-br from-ergo-dark to-[#1a252f] text-white",
        iconClass: "text-ergo-green"
    },
    {
        title: "Interface Plan 2D",
        desc: "Modélisation des bureaux et heatmaps pour les gestionnaires de flotte.",
        icon: LayoutTemplate,
        class: "md:col-span-1 bg-white border border-gray-100",
        iconClass: "text-blue-500"
    },
    {
        title: "Mobile App",
        desc: "Notifications et routines d'étirements personnalisées pour l'employé.",
        icon: Smartphone,
        class: "md:col-span-1 bg-ergo-green/5 border border-ergo-green/10",
        iconClass: "text-ergo-green"
    },
    {
        title: "Crit'Ergo",
        desc: "Algorithme propriétaire de scoring de santé d'entreprise.\
        Score calculé selon la satisfaction des employés, l'assiduité des routines bien-être, et les efforts fournis par l'entreprise.",
        logo: "/Critergo.svg",
        class: "md:col-span-2 bg-white border border-gray-100",
        iconClass: "text-red-500"
    }
];
---

<section id="solution" class="py-20 bg-ergo-slate">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="mb-12">
            <h2 class="text-3xl font-bold text-ergo-dark sm:text-4xl">La Solution</h2>
            <p class="mt-4 text-lg text-gray-600 max-w-2xl">
                Un écosystème complet pour l'ergonomie au travail.
            </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-4 gap-6 auto-rows-[minmax(180px,auto)]">
            {features.map((feature) => (
                <div class={`rounded-3xl p-8 flex flex-col justify-between shadow-sm transition-transform hover:-translate-y-1 ${feature.class}`}>
                    <div class="mb-4">
                        {feature.logo ? (
                            <img src={feature.logo} alt={feature.title} class="w-96 h-full m-auto" />
                        ) : (
                            <feature.icon className={`w-8 h-8 ${feature.iconClass}`} />
                        )}
                    </div>
                    <div>
                        {!feature.logo && (
                            <h3 class={`text-xl font-bold mb-2 ${feature.class.includes('text-white') ? 'text-white' : 'text-gray-900'}`}>
                                {feature.title}
                            </h3>
                        )}
                        <p class={`text-sm leading-relaxed ${feature.class.includes('text-white') ? 'text-gray-300' : 'text-gray-500'}`}>
                            {feature.desc}
                        </p>
                    </div>
                </div>
            ))}
        </div>
    </div>
</section>